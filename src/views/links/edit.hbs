<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-warning text-white">
                 Edit Link
                </div>
                <div class="card-body">
                    <form action="/links/update/{{link.id}}" method="post">
                        <div class="form-group">
                           <input type="text" name="title" value="{{link.title}}" class="form-control" placeholder="Title" autofocus>
                        </div>
                         <div class="form-group">
                          <input type="url" name="url"  value="{{link.url}}"class="form-control" placeholder="url">
                        </div>
                         <div class="form-group">
                           <textarea name="description"  class="form-control"  rows="2" placeholder="description">{{link.description}}
                           </textarea>   
                        </div>

                         <div class="form-group">
                            <button type="submit" class="btn btn-warning btn-block">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>