
<div class="container mt-5">
    <div class="row">
       {{#each links}}
           <div class="col-md-3">
               <div class="card">
                     <a href="{{url}}" target="_blank" class="text-center mt-3">
                         <h3 class="card-text"> {{title}}</h3>
                     </a> 
                  
                   <div class="card-body mx-auto"> 
                     <p class="mt-3 text-center">{{description}}</p>
                    
                      <a href="/links/delete/{{id}}" class="btn btn-danger ">delete</a>
                      <a href="/links/edit/{{id}}" class="btn btn-secondary ">edit</a>
                   </div>
                   <div class="card-footer">
                        <p>{{  created_at }}</p>
                   </div>
               </div>
           </div>
           {{else}}
            
            <div class="col-md-6 mx-auto">
                <div class="card">
                    <div class="card-body text-center">
                        <p>Here is not links saved yet?</p>
                        <a href="/links/add">Create here</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
